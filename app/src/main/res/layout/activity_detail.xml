<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    tools:context="com.agmcs.countdown.DetailActivity">


    <android.support.v7.widget.CardView
        android:layout_centerInParent="true"
        android:layout_margin="8dp"
        android:layout_width="300dp"
        app:cardElevation="20dp"
        android:layout_height="400dp">
        <RelativeLayout
            android:id="@+id/detail_show_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_weight="3">
            <TextView
                android:id="@+id/detail_title"
                android:layout_width="wrap_content"
                android:textSize="34sp"
                android:maxLines="1"
                android:text="新年卡很快就和开奖号"
                android:alpha="0.6"
                android:textColor="#E91E63"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingTop="8dp"
                android:id="@+id/detail_note"
                android:layout_below="@id/detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:textSize="16sp"
                android:alpha="0.5"
                android:textColor="#000"
                android:text="得红包啦得红包啦得红包啦得红包啦得红包啦一二三一二三一二三一二三一二三"/>
            <TextView
                android:paddingTop="16dp"
                android:layout_below="@id/detail_note"
                android:id="@+id/detail_since_or_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:alpha="0.4"
                android:textColor="#000"
                android:text="还有"/>
            <TextView
                android:layout_below="@id/detail_since_or_left"
                android:id="@+id/detail_days"
                android:text="365"
                android:textStyle="bold"
                android:textSize="32sp"
                android:alpha="0.6"
                android:textColor="#E91E63"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="Days"
                android:alpha="0.4"
                android:textColor="#000"
                android:layout_alignBaseline="@id/detail_days"
                android:layout_toRightOf="@id/detail_days"/>


            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:layout_marginBottom="16dp"
                android:layout_height="wrap_content">
                <com.gc.materialdesign.views.ButtonFlat
                    android:id="@+id/detail_edit"
                    android:textSize="18sp"
                    android:alpha="0.7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#212121"
                    android:text="Edit"/>
                <com.gc.materialdesign.views.ButtonFlat
                    android:id="@+id/detail_ok"
                    android:textSize="18sp"
                    android:alpha="0.7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFC107"
                    android:text="OK"/>
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone"
            android:id="@+id/detail_edit_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#F06292"
                android:textSize="20sp"
                android:paddingBottom="8dp"
                android:text="Edit"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#88212121"
                android:textColorHint="#44212121"
                android:maxLength="10"
                android:maxLines="1"
                android:id="@+id/edit_title"
                android:hint="Title"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#88212121"
                android:textColorHint="#44212121"
                android:maxLines="3"
                android:maxLength="30"
                android:id="@+id/edit_note"
                android:hint="Note"/>
            <com.gc.materialdesign.views.ButtonFlat
                android:id="@+id/edit_date"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColor="#F06292"
                android:gravity="center"
                android:alpha="0.7"
                android:textSize="18sp"
                android:text="Choose Date"/>
            <RadioGroup
                android:id="@+id/edit_color_group"
                android:paddingBottom="8dp"
                android:paddingTop="16dp"

                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/color1"
                    android:layout_weight="1"
                    android:checked="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#EC407A"/>
                <RadioButton
                    android:id="@+id/color2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#26A69A"/>
                <RadioButton
                    android:layout_weight="1"
                    android:id="@+id/color3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#FFCA28"/>
                <RadioButton
                    android:layout_weight="1"
                    android:id="@+id/color4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#FF7043"/>
            </RadioGroup>
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:layout_marginBottom="16dp"
                android:layout_height="wrap_content">
                <com.gc.materialdesign.views.ButtonFlat
                    android:id="@+id/detail_edit_delete"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#212121"
                    android:alpha="0.7"
                    android:text="Delete"/>
                <com.gc.materialdesign.views.ButtonFlat
                    android:id="@+id/detail_edit_ok"
                    android:textSize="18sp"
                    android:alpha="0.7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFC107"
                    android:text="OK"/>
            </LinearLayout>        </LinearLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>
