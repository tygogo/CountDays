<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_height="120dp"
    android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_weight="1"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/card_title"
                android:textSize="24sp"
                android:text="新年"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/card_time"
                android:layout_below="@id/card_title"
                android:textSize="14sp"
                android:text="2015年2月21日"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/card_note"
                android:layout_width="wrap_content"
                android:maxLines="3"
                android:layout_below="@id/card_time"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="新年快来啊的红包呜呜呜"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_width="100dp"
            android:id="@+id/card_color"
            android:background="#FF5722"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/card_days"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="56824"
                    android:alpha="0.8"
                    android:textStyle="bold"
                    android:textColor="#FAFAFA"
                    android:textSize="34sp"/>
                <TextView
                    android:layout_below="@id/card_days"
                    android:id="@+id/since_or_left"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:alpha="0.8"
                    android:textColor="#FAFAFA"
                    android:layout_height="wrap_content"
                    android:text="Days"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>




</android.support.v7.widget.CardView>